{{quiz-question
  question=model
  onSelect=(action 'selectAnswer')
}}

<ul data-test="QuestionList">
  {{#each all_questions as |question|}}
    {{#if question.available}}
      <li data-test="QuestionItem-Active">
        {{link-to question.index 'quiz.question' question.index activeClass="font-bold"}}
      </li>
    {{else}}
      <li data-test="QuestionItem">
        {{question.index}}
      </li>
    {{/if}}
  {{/each}}
</ul>

{{progress-bar
    progress=progress}}
