<div class="eq-profile">
    <div class="eq-profile__results">
        <div class="eq-profile__title">
            <h1>
                {{titleize custom.name}}
            </h1>
        </div>

        <article class="eq-profile__description">
            <p>
                {{custom.description}}
            </p>

            {{poke-stats
                name=custom.name
                rawStats=baseData.stats}}
        </article>
    </div>

    <div class="eq-profile__basic-info">
        <div class="eq-profile__image">
            <img src="/assets/images/{{custom.name}}.png" alt="Picture of {{custom.name}}">
        </div>
        <div class="eq-profile__sprites">
            {{poke-sprites
                sprites=baseData.sprites
                name=custom.name}}
        </div>

        <div class="eq-profile__meta">
            {{poke-types
                name=custom.name
                rawTypes=baseData.types}}

            {{poke-abilities
                rawAbilities=baseData.abilities}}
        </div>
    </div>

    <div class="eq-profile__stats">

    </div>

    <div class="eq-profile__entries">
        {{poke-entries
            name=custom.name
            rawEntries=speciesData.flavor_text_entries}}
    </div>
</div>
